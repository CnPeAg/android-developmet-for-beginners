<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- style for the tag text view -->
    <style name="tag" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- style for the headline text view -->
    <style name="headline" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- style for the writer text view -->
    <style name="writer" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- style for the date text view -->
    <style name="date" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>
